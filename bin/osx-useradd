#!/bin/bash

nm_user=$1; shift
id_user=$1; shift
pth_user="/Users/$nm_user"

dscl . -create $pth_user
dscl . -create $pth_user UserShell /bin/bash
dscl . -create $pth_user UniqueID $id_user
dscl . -create $pth_user PrimaryGroupID 20 # staff
dscl . -create $pth_user NFSHomeDirectory $pth_user
mkdir -p /Users/$nm_user
chown $nm_user:staff /Users/$nm_user
sudo su - $nm_user -c id -a $nm_user
